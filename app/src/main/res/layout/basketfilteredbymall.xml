<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basketFilteredByMall_viewgroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/basketFilterByMall_logo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/getstylelog" />

    <TextView
        android:id="@+id/basketFilteredByMall_count"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:text="개수"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/basketFilteredByMall_name" />

    <TextView
        android:id="@+id/basketFilteredByMall_name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="쇼핑몰 이름"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/basketFilterByMall_logo"
        app:layout_constraintTop_toTopOf="@+id/basketFilterByMall_logo" />
</android.support.constraint.ConstraintLayout>